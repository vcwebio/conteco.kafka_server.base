#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export CONTECO_DC_GLOBAL_STACKS="kafka_server.base"
export CONTECO_DC_GLOBAL_STACKNAMES="conteco_dc_kafka"
export CONTECO_DC_GLOBAL_BOOTSTACKS="conteco_dc_kafka"
export CONTECO_DC_GLOBAL_RUNSTACKS=""
export CONTECO_DC_GLOBAL_VOLUME_LIST="${DOLLAR}{CONTECO_STACKPREFIX}_kafka_secrets_volume,${DOLLAR}{CONTECO_STACKPREFIX}_kafka_data_volume"
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_IMAGE_NAME,$CONTECO_DC_KAFKA_ENVIRONMENT,$CONTECO_DC_KAFKA_COMMAND,$CONTECO_DC_KAFKA_VOLUMES,$CONTECO_DC_KAFKA_NETWORKS,$CONTECO_DC_KAFKA_DEPLOY_MODE,$CONTECO_DC_GLOBAL_VOLUMES,$CONTECO_DC_GLOBAL_NETWORKS'
# END CONFIGURATION

# START GLOBAL SETTINGS
export CONTECO_DC_GLOBAL_SERVICE_NAME="kafka"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_KAFKA_ENVIRONMENT="\
'KAFKA_HEAP_OPTS=-Xmx${DOLLAR}{CONTECO_DC_KAFKA_DEPLOY_RESOURCES_RESERVATIONS_MEMORY} -Xms${DOLLAR}{CONTECO_DC_KAFKA_DEPLOY_RESOURCES_RESERVATIONS_MEMORY}',\
'KAFKA_BROKER_ID=1',\
'KAFKA_ZOOKEEPER_CONNECT=zookeeper:2181',\
'KAFKA_ADVERTISED_LISTENERS=PLAINTEXT://kafka:9092${DOLLAR}{CONTECO_DC_KAFKA_KAFKA_ADVERTISED_LISTENERS}',\
'KAFKA_LISTENER_SECURITY_PROTOCOL_MAP=PLAINTEXT:PLAINTEXT${DOLLAR}{CONTECO_DC_KAFKA_KAFKA_LISTENER_SECURITY_PROTOCOL_MAP}',\
'KAFKA_INTER_BROKER_LISTENER_NAME=PLAINTEXT',\
'KAFKA_AUTO_CREATE_TOPICS_ENABLE=true',\
'KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR=1',\
'KAFKA_GROUP_INITIAL_REBALANCE_DELAY_MS=0',\
'KAFKA_CONFLUENT_LICENSE_TOPIC_REPLICATION_FACTOR=1',\
'KAFKA_MIN_INSYNC_REPLICAS=1',\
'KAFKA_DEFAULT_REPLICATION_FACTOR=1',\
'KAFKA_TRANSACTION_STATE_LOG_MIN_ISR=1',\
'KAFKA_TRANSACTION_STATE_LOG_REPLICATION_FACTOR=1',\
'KAFKA_METRIC_REPORTERS=io.confluent.metrics.reporter.ConfluentMetricsReporter',\
'CONFLUENT_METRICS_REPORTER_BOOTSTRAP_SERVERS=kafka:9092',\
'CONFLUENT_METRICS_REPORTER_ZOOKEEPER_CONNECT=zookeeper:2181',\
'CONFLUENT_METRICS_REPORTER_TOPIC_REPLICAS=1',\
'CONFLUENT_METRICS_ENABLE=true',\
'CONFLUENT_SUPPORT_CUSTOMER_ID=anonymous',\
'KAFKA_LOG_RETENTION_HOURS=1', \
'KAFKA_LOG_CLEANER_ENABLE=true', \
'KAFKA_LOG_CLEANUP_POLICY=delete'"

export CONTECO_DC_KAFKA_COMMAND=
export CONTECO_DC_KAFKA_VOLUMES="'${DOLLAR}{CONTECO_STACKPREFIX}_kafka_secrets_volume:/etc/kafka/secrets','${DOLLAR}{CONTECO_STACKPREFIX}_kafka_data_volume:/var/lib/kafka/data'"
export CONTECO_DC_KAFKA_NETWORKS="${DOLLAR}{CONTECO_NETWORKLOCAL}_overlay"
export CONTECO_DC_KAFKA_DEPLOY_MODE="replicated"
export CONTECO_DC_GLOBAL_VOLUMES="${DOLLAR}{CONTECO_STACKPREFIX}_kafka_secrets_volume: { external: true },${DOLLAR}{CONTECO_STACKPREFIX}_kafka_data_volume: { external: true }"
export CONTECO_DC_GLOBAL_NETWORKS="${DOLLAR}{CONTECO_NETWORKLOCAL}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS kafka.base
export CONTECO_DC_KAFKA_KAFKA_ADVERTISED_LISTENERS=",HOST://localhost:29092"
export CONTECO_DC_KAFKA_KAFKA_LISTENER_SECURITY_PROTOCOL_MAP=",HOST:PLAINTEXT"
export CONTECO_DC_KAFKA_PORTS="29092:29092"
export CONTECO_DC_KAFKA_DEPLOY_RESOURCES_LIMITS_MEMORY="1536m"
export CONTECO_DC_KAFKA_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="1024m"
# END SETTINGS kafka.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
