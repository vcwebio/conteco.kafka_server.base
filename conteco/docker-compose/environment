#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export CONTECO_DC_GLOBAL_STACKS="kafka.base"
export CONTECO_DC_GLOBAL_STACKNAMES="kafka"
export CONTECO_DC_GLOBAL_BOOTSTACKS="kafka"
export CONTECO_DC_GLOBAL_RUNSTACKS=""
export CONTECO_DC_GLOBAL_VOLUME_LIST="conteco_dc_kafka_volume"
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_IMAGE_NAME,$CONTECO_DC_KAFKA_ENVIRONMENT,$CONTECO_DC_KAFKA_COMMAND,$CONTECO_DC_KAFKA_VOLUMES,$CONTECO_DC_KAFKA_NETWORKS,$CONTECO_DC_KAFKA_DEPLOY_LABELS,$CONTECO_DC_KAFKA_DEPLOY_MODE,$CONTECO_DC_GLOBAL_VOLUMES,$CONTECO_DC_GLOBAL_NETWORKS'
# END CONFIGURATION

# START GLOBAL SETTINGS
export CONTECO_DC_GLOBAL_SERVICE_NAME="${CONTECO_TYPE}"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_KAFKA_ENVIRONMENT="\
'KAFKA_HEAP_OPTS=-Xmx${DOLLAR}{CONTECO_DC_KAFKA_DEPLOY_RESOURCES_RESERVATIONS_MEMORY} -Xms${DOLLAR}{CONTECO_DC_KAFKA_DEPLOY_RESOURCES_RESERVATIONS_MEMORY}',\
'KAFKA_BROKER_ID=1',\
'KAFKA_ZOOKEEPER_CONNECT=zookeeper:2181',\
'KAFKA_ADVERTISED_LISTENERS=OVERLAY://kafka:9092${DOLLAR}{CONTECO_DC_KAFKA_KAFKA_ADVERTISED_LISTENERS}',\
'KAFKA_LISTENER_SECURITY_PROTOCOL_MAP=OVERLAY:PLAINTEXT${DOLLAR}{CONTECO_DC_KAFKA_KAFKA_LISTENER_SECURITY_PROTOCOL_MAP}',\
'KAFKA_INTER_BROKER_LISTENER_NAME=OVERLAY',\
'KAFKA_AUTO_CREATE_TOPICS_ENABLE=true',\
'KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR=1',\
'KAFKA_LOG_RETENTION_HOURS=1'"
export CONTECO_DC_KAFKA_COMMAND=
export CONTECO_DC_KAFKA_VOLUMES="'${DOLLAR}{CONTECO_TYPE}_conteco_dc_kafka_volume:/var/lib/kafka/data'"
export CONTECO_DC_KAFKA_NETWORKS="${DOLLAR}{CONTECO_TYPE}_overlay"
export CONTECO_DC_KAFKA_DEPLOY_LABELS=
export CONTECO_DC_KAFKA_DEPLOY_MODE="replicated"
export CONTECO_DC_GLOBAL_VOLUMES="${DOLLAR}{CONTECO_TYPE}_conteco_dc_kafka_volume: { external: true }"
export CONTECO_DC_GLOBAL_NETWORKS="${DOLLAR}{CONTECO_TYPE}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS kafka.base
export CONTECO_DC_KAFKA_KAFKA_ADVERTISED_LISTENERS=",HOST://localhost:29092"
export CONTECO_DC_KAFKA_KAFKA_LISTENER_SECURITY_PROTOCOL_MAP=",HOST:PLAINTEXT"
export CONTECO_DC_KAFKA_PORTS="29092:29092"
export CONTECO_DC_KAFKA_DEPLOY_RESOURCES_LIMITS_CPUS=
export CONTECO_DC_KAFKA_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.1"
export CONTECO_DC_KAFKA_DEPLOY_RESOURCES_LIMITS_MEMORY="512m"
export CONTECO_DC_KAFKA_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="256m"
# END SETTINGS kafka.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
